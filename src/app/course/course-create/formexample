<form [formGroup]="sectionsForm" (ngSubmit)="onSubmit()">
                <div *ngFor="let sectionFormGroup of sectionsForm.controls.sections.controls; let i = index">
                  <div class="form-group" [formGroup]="sectionFormGroup">
                    <label>
                      Content name:
                      <input type="text" class="form-control" formControlName="sectionName" placeholder="Section name">
                    </label>
                    <label>
                      Content:
                      <input type="text" class="form-control" formControlName="sectionDescription" placeholder="Description">
                    </label>
          
                    <label>
                      <button class="btn btn-outline-danger" (click)="removeFormControl(i)">remove formGroup</button>
                    </label>
                  </div>
                </div>
                <button class="btn btn-outline-primary" type="Submit">Add</button>
              </form>
              <button class="btn btn-outline-success" (click)="addFormControl()">add new user formGroup</button>
            </div>
createForm(){
    this.sectionsForm = this.fb.group({
      sections: this.fb.array([
        this.fb.group({
          sectionName: ['', Validators.required],
          sectionDescription: ['', Validators.required]
        })
      ])
    })
  }
  removeFormControl(i) {
    let sectionsArray = this.sectionsForm.controls.sections as FormArray;
    sectionsArray.removeAt(i);
  }

  addFormControl() {
    let sectionsArray = this.sectionsForm.controls.sections as FormArray;
    let arraylen = sectionsArray.length;

    let newSectionGroup: FormGroup = this.fb.group({
      sectionName: ['', Validators.required],
      sectionDescription: ['', Validators.required]
    })

    sectionsArray.insert(arraylen, newSectionGroup);
  }